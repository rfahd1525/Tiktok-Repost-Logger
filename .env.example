# TikTok username to monitor (without @)
TIKTOK_USERNAME=username_to_monitor

# Check interval in minutes (recommended: 2-5)
CHECK_INTERVAL_MINUTES=3

# Log file path (optional, defaults to reposts.log)
LOG_FILE_PATH=reposts.log

# State file path (optional, defaults to repost_state.json)
STATE_FILE_PATH=repost_state.json

# Browser settings
HEADLESS=true
BROWSER_TYPE=firefox

# Retry settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Notification settings
ENABLE_NOTIFICATIONS=false

# Email notifications (using Gmail SMTP as example)
# For Gmail: Use an App Password, not your regular password
# Generate one at: https://myaccount.google.com/apppasswords
EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=destination_email@example.com

# Telegram notifications
# 1. Create a bot: Message @BotFather on Telegram, send /newbot
# 2. Get your chat ID: Message @userinfobot on Telegram
TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
